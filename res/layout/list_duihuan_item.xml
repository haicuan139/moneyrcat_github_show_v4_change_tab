<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_selector"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/duihuan_icon"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/duihuan_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/duihuan_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="50元京东礼品卡"
        android:textColor="@color/texttitle"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/duihuan_title"
        android:layout_below="@+id/duihuan_title"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/duihuanBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价值:6.8元"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textcontent"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/duihuanCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="剩余:20张"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textcontent"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/duihuanBalanceText"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/duihuan_title"
        android:layout_below="@+id/linearLayout1"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/right_arrow"
        android:text="点击兑换"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textcontent"
        android:textSize="15sp" />

</RelativeLayout>