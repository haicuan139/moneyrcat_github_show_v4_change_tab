<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_scrollview"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:background="#F6F8F9"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical" >

        <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/adPager"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
             >
        </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="20dp" >

            <LinearLayout
                android:id="@+id/pageControlLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="@drawable/home_curve_line" />

        <include layout="@layout/wodeyue" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#efefef" >
        </RelativeLayout>

        <ListView
            android:id="@+id/adListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#cdcdcd"
            android:dividerHeight="0.5dp"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>