<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/tixianTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="兑换"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/texttitle" />

            <Button
                android:id="@+id/closeButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/x"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/line" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="姓名"
                android:textColor="@color/texttitle" />
            <EditText
                android:id="@+id/duihuan_name"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView2"
                android:background="@drawable/commit_bt_normal"
                android:textColor="@color/texttitle"
                android:textSize="13sp"
                android:ems="10" />
        </RelativeLayout>
        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/duihuan_tel_edit"
                android:layout_width="fill_parent"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView222"
                android:background="@drawable/commit_bt_normal"
                android:textColor="@color/texttitle"
                android:textSize="13sp"
                android:inputType="number"
                android:ems="10" />

            <TextView
                android:id="@+id/textView222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="手机"
                android:textColor="@color/texttitle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/duihuan_address"
                android:layout_width="fill_parent"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView3"
                android:background="@drawable/commit_bt_normal"
                android:textColor="@color/texttitle"
                android:textSize="13sp"
                android:singleLine="true"
                android:ems="10" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="地址"
                android:textColor="@color/texttitle" />
        </RelativeLayout>



        <Button
            android:id="@+id/commit_bt"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/commit_bt_selector"
            android:textColor="@color/texttitle"
            android:onClick="onClick"
            android:text="提交" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="*请仔细填写以上信息,以便于收到商品"
            android:textColor="@color/textcontent" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp" />
    </LinearLayout>

</RelativeLayout>